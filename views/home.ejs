  <!-- Background Weather Elements -->
  <div class="weather-bg-element">‚õÖ</div>
  <div class="weather-bg-element">üå§Ô∏è</div>
  <div class="weather-bg-element">üåßÔ∏è</div>
  <div class="weather-bg-element">‚òÄÔ∏è</div>

  <div class="container">
    <div class="header">
      <h1>Weather App</h1>
      <div class="subtitle">by Saurabh Kumar</div>
      <div class="tagline">Get instant weather updates for any city</div>
    </div>

    <form class="weather-form" action="/weather/city" method="GET">
